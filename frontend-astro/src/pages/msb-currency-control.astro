<DefaultPageLayout title="МСБ Валютный контроль">
    <ProductCardBanner
        textBenefits={[
            {
                title: "Бесплатные <br>консультации",
            },
            {
                title: "Индивидуальный <br>подход",
            },
            {
                title: "Разнообразие <br>сделок",
            },
        ]}
        image="/assets/big-illustrations/large-business/currency-control.png"
        hasPattern
        backgroundColor="heavy-violet"
        breadcrumbs={breadcrumbs}
        ,
        type="msb"
        footerCol={4}
    >
        <Fragment slot="title">Валютный контроль</Fragment>
        <Fragment slot="subtitle"
            >Соблюдение требований валютного законодательства резидентами
            и&nbsp;нерезидентами</Fragment
        >
        <Fragment slot="footer">
            {
                productBenefits.map(({ title, description, iconId }) => (
                    <BenefitTextCard
                        title={title}
                        description={description}
                        iconId={iconId}
                    />
                ))
            }
