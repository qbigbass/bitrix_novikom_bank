---
type Theme = "light" | "dark";
type Type = "card" | "section" | "section-heavy" | "section-2";

interface Props {
    class?: string;
    theme?: Theme;
    type?: Type;
}

const { class: className, theme = "light", type = "card", ...rest } = Astro.props as Props;

// патерн для карточек и секций
---

<picture class:list={["pattern-bg", className, { ...rest }]}>
    <source srcset={`assets/patterns/${type}/pattern-${theme}-s.svg`} media="(max-width: 767px)">
    <source srcset={`assets/patterns/${type}/pattern-${theme}-m.svg`} media="(max-width: 1199px)">
    <img src={`assets/patterns/${type}/pattern-${theme}-l.svg`} alt="bg pattenr" loading="lazy">
</picture>

<style lang="scss" is:global>

    .pattern-bg {
        position: absolute;
        bottom: 0;
        right: 0;

        & img {
            object-fit: cover;
            display: block;
        }
    }
</style>