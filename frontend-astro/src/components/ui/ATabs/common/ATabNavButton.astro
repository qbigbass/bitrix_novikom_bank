---
import AIcon from "../../../AIcon.astro";

interface Props {
	isPrev?: boolean;
	isNext?: boolean;
}

const {
	isPrev = false,
	isNext = false,
} = Astro.props as Props;

const iconName = isPrev ? 'icon-chevron-left' : 'icon-chevron-right';
---

<button class:list={[
	'a-tab-nav-button',
	{ 'js-a-tab-prev is-prev': isPrev },
	{ 'js-a-tab-next is-next': isNext },
]}>
	<AIcon symbolId={iconName} size="m" />
</button>

<style lang="scss" is:global>
	@import "@styles/placeholders";
	@import "@styles/media-queries";

	.a-tab-nav-button {
		@extend %reset-button;

		position: absolute;
		display: none;
		top: 50%;
		transform: translateY(-50%);
		align-items: center;
		height: calc(100% - 2px);
		width: 54px;
		color: var(--blue-100);
		z-index: 1;

		&.is-prev {
			left: 1px;
			justify-content: flex-start;
			background: linear-gradient(270deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
			padding-left: 0.5rem;
			border-radius: 4px 0 0 4px;
		}

		&.is-next {
			right: 1px;
			justify-content: flex-end;
			background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
			padding-right: 0.5rem;
			border-radius: 0 4px 4px 0;
		}

		&.swiper-button-disabled {
			display: none;
		}

		@include use-media(tablet-album) {
			display: flex;
		}
	}
</style>
