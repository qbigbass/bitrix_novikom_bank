---
interface Props {
	class?: string,
}

const {class: className, ...rest} = Astro.props;
---
<button class="button-search" type="button" class:list={className} {...rest}>
	<slot></slot>
</button>

<style lang="scss" is:global>
	@use "sass:map";
	@import "@styles/placeholders";

	.button-search {
		@extend %reset-button;
		color: var(--violet-100);

		&:hover,
		&.js-spoiler-button-active {
			color: var(--blue-100);
		}
	}

</style>
