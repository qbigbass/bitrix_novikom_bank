---
import SectionLayout from "./SectionLayout.astro";
interface Props {
    title: string;
}

const {
    title,
    ...rest
} = Astro.props as Props;
---

<SectionLayout class="transfers-office-steps-layout" {...rest}>
    <div class="content-container">
        <div class="transfers-office-steps-layout__container">
            <h3 class="transfers-office-steps-layout__title headline-2">{title}</h3>
            <slot />
        </div>
    </div>
</SectionLayout>

<style lang="scss" is:global>
    @import "@styles/media-queries";

    .transfers-office-steps-layout {
        &__container {
            display: flex;
            flex-direction: column;
            gap: 2.5rem;

            @include use-media(tablet-album) {
                gap: 3rem;
                padding: 0 2.5rem;
            }
        }
    }
</style>
