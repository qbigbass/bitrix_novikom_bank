---
interface Props {
    cols?: number;
}

const {
    cols = 1,
    ...rest
} = Astro.props as Props;
---

<div class=`form-row form-row--cols-${cols}` >
    <slot />
</div>

<style lang="scss" is:global>
    @use "sass:map";
    @import '@styles/media-queries';

    .form-row {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1.5rem;

        @include use-media(tablet) {
            flex-direction: row;
            gap: 2.5rem;
        }

        & > * {
            width: 100%;
        }

        &--cols-2 {
            @include use-media(tablet) {
                & > * {
                    width: calc(50% - 2.5rem / 2);
                }
            }
        }
    }
</style>
