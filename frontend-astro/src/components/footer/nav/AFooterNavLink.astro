---
interface Props {
	href: string;
}

const { href = '#' } = Astro.props as Props;
---

<a href={href} class="a-footer-nav-link">
	<slot />
</a>

<style lang="scss" is:global>
	@use "sass:map";
	@import "@styles/variables";
	@import "@styles/placeholders";

	.a-footer-nav-link {
		@extend %reset-link;

		font-size: 14px;
		line-height: 170%;
		letter-spacing: -0.14px;
		color: var(--dark-70);
	}
</style>