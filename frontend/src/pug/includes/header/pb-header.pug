mixin pb-header(isOPenModal = false)
    header#header.pb-header.animate.js-animation-start
        .container
            .d-flex.justify-content-between
                .col-8
                    a.d-none.d-lg-block(href="#")
                        img(src="img/logo-pb.svg", width="280", height="80", alt="Новиком")
                    a.d-lg-none(href="#")
                        img(src="img/logo-pb-mob.svg", width="140", height="40", alt="Новиком")
                .col-4.d-flex.align-items-center.justify-content-end.gap-4
                    if isOPenModal
                        button(type="button" data-bs-toggle="modal" data-bs-target="#modal-become-client" aria-label="Стать клиентом").d-none.d-lg-block.btn.btn-pb.btn-pb--primary.btn-pb--size-m
                            | Стать клиентом
                    else
                        a.d-none.d-lg-block.btn.btn-pb.btn-pb--primary.btn-pb--size-m.js-scroll-to(href="#become-client") Стать клиентом
                    button(type="button").pb-menu-btn.js-pb-menu-btn
                        span.pb-menu-btn__icon
                            span
                            span
                            span
                            span
                            span
                            span
