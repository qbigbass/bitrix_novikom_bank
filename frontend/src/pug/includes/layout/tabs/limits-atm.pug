-
    var tableData = [
        {
            label: "Максимальная сумма одного перевода",
            value: ["70&nbsp;000 рублей (без учёта комиссии)"]
        },
        {
            label: "Максимальная сумма переводов в&nbsp;сутки",
            value: ["300&nbsp;000 рублей с&nbsp;учётом дополнительной комиссии по&nbsp;одной карте"]
        },
    ]

    var tableData2 = [
        {
            label: "Максимальная сумма одной операции",
            value: ["15&nbsp;000 рублей"]
        },
        {
            label: "Максимальная сумма всех операций за&nbsp;календарный месяц по&nbsp;одной карте",
            value: ["100&nbsp;000 рублей"]
        },
    ]

.row
    .col-12
        h4.mb-4.mb-md-5.mb-lg-6 Лимиты на&nbsp;переводы по&nbsp;картам
        .table-tab.cell-2
            .table-tab__body
                each row in tableData
                    .table-tab__row
                        .table-tab__cell.text-l.fw-semibold.dark-70!= row.label
                        .table-tab__cell
                            each item in row.value
                                p.text-l!= item

.row.mt-6.mt-md-9.mt-lg-11
    .col-12
        h4.mb-4.mb-md-5.mb-lg-6 Лимиты на&nbsp;переводы наличными
        .table-tab.cell-2
            .table-tab__body
                each row in tableData2
                    .table-tab__row
                        .table-tab__cell.text-l.fw-semibold.dark-70!= row.label
                        .table-tab__cell
                            each item in row.value
                                p.text-l!= item
