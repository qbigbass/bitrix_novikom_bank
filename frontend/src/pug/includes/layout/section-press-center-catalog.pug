                    tabsList,
                    'min-w-sm-100',
                    'text-center'
                ).tabs-panel--full-width-items.tabs-panel--auto-width-md
            .col-12
                a(
                    data-bs-toggle="collapse"
                    href="#filters-content"
                    role="button"
                    aria-expanded="true"
                    aria-controls="filters-content"
                ).btn.btn-lg.btn-link.p-0.border-none.d-flex.align-items-center.justify-content-between.d-md-none
