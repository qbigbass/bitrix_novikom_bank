                    .w-100.d-flex.align-items-center.flex-column.flex-lg-row.justify-content-between.row-gap-4.row-gap-md-5
                        .w-100
                            +tabs(
                                newsTabsList,
                                "section-catalog__tab-list min-w-sm-100 min-w-lg-auto",
                                "section-catalog__tab-list-item text-center",
                                true
                            ).tabs-panel--full-width-items.tabs-panel--auto-width-md
                        .d-flex.w-100.justify-content-end
                            .position-relative.w-100.w-lg-240w
