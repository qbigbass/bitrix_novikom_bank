include ../../../components/ui/input/input-slider
include ../../../cards/card-calculate-result

.row
    .col-12.col-lg-6
        .tab-content.pe-xl-6
            .d-flex.flex-column.row-gap-4.row-gap-md-6.row-gap-lg-7
                each input in inputSliderList
                    +input-slider(input)

                .d-flex.flex-column.row-gap-4.row-gap-lg-6
                    .d-flex.flex-column.row-gap-2
                        label(for="select1").form-label.mb-0
                            | Регион
                        select#select1(aria-label="Подсказка").form-select.js-select
                            option(selected value="1") Дальневосточный федеральный округ
                            option(value="2") Список 2
                            option(value="3") Список 3
                            option(value="4") Список 4

                    .d-flex.flex-column.row-gap-2
                        label(for="select2").form-label.mb-0
                            | Программа кредитования
                        select#select2(aria-label="Подсказка").form-select.js-select
                            option(selected value="1") Ипотека по программе «Первичный рынок»
                            option(value="2") Список 2
                            option(value="3") Список 3
                            option(value="4") Список 4

                    .d-flex.flex-column.row-gap-2
                        label(for="select2").form-label.mb-0
                            | Объект залога
                        select#select3(aria-label="Подсказка").form-select.js-select
                            option(selected value="1") Квартира
                            option(value="2") Список 2
                            option(value="3") Список 3
                            option(value="4") Список 4

                button.btn.btn-link.btn-sm.btn-icon.js-add-replenishment(type="button")
                    +svg-use("icon-plus", "icon size-s")
                    | Добавить пополнение

                .d-flex.flex-column.row-gap-4
                    .form-check
                        input#inp1(type="checkbox" value="" checked).form-check-input
                        label(for="inp1").form-check-label
                            | Получаю зарплату на&nbsp;карту Новиком

                    .form-check
                        input#inp2(type="checkbox" value="").form-check-input
                        label(for="inp2").form-check-label
                            | Страхование

    .col-12.col-lg-6.mt-4.mt-md-6.mt-lg-0
        .ps-xxl-6
            +polygon-container()
                +card-calculate-result(calculatorData, 'bg-dark-0')
