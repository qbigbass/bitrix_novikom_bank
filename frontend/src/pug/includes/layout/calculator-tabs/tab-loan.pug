.row.js-calculator-loan(data-table="loans" data-id)
    .col-12.col-lg-6
        .d-flex.flex-column.row-gap-4.row-gap-md-6.row-gap-lg-7
            each input in inputSliderList
                +input-slider(input)

            .d-flex.flex-column.row-gap-4
                .d-flex.flex-column.row-gap-4.row-gap-lg-6
                    .d-flex.flex-column.row-gap-2.js-select-borrower-type-wrapper
                        label(for="select-loan-borrower").form-label.mb-0
                            | Тип заемщика
                        select#select-loan-borrower(aria-label="Подсказка").form-select.js-select.js-select-borrower-type
                            option(selected value="Зарплатный клиент") Зарплатный клиент
                            option(value="Стратегический клиент") Стратегический клиент
                    .d-flex.flex-column.row-gap-2.js-select-loan-properties-wrapper
                        label(for="select-loan-properties").form-label.mb-0
                            | Особенности
                        select#select-loan-properties(aria-label="Подсказка").form-select.js-select.js-select-loan-properties
                            option(selected value="С поручительством физического лица") С поручительством физического лица
                            option(value="Без обеспечения") Без обеспечения
                            option(value="На рефинансирование") На рефинансирование

                    .d-flex.flex-column.row-gap-2
                        label(for="select-loan-payment-type").form-label.mb-0
                            | Тип платежей
                        select#select-loan-payment-type(aria-label="Подсказка").form-select.js-select.js-select-loan-payment-type
                            option(selected value="annuity") Аннуитетные платежи
                            option(value="differentiated") Дифференцированные платежи

    .col-12.col-lg-6.mt-4.mt-md-6.mt-lg-0
        .ps-xxl-6
            +polygon-container()
                +card-calculate-result(calculatorData)
    #payment-loan-schedule.col-12.collapse
        .payment-schedule.mt-6.pt-6.mt-md-7.pt-md-7.mt-lg-9.pt-lg-9.custom-overflow-scrollbar
            table.table.table--bg-transparent.text-center
                thead
                    tr
                        th(scope="col") Месяц
                        th(scope="col") Оплата процентов
                        th(scope="col") Оплата основного долга
                        th(scope="col") Ежемесячный платеж
                        th(scope="col") Остаток погашения
                tbody#payment-loan-table-body
