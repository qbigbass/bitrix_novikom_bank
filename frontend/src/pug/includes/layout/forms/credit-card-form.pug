                },
            ],
            inputs2: [
                {
                    id: "employer-name",
                    label: "Наименование организации-работодателя",
                    placeholder: "",
                    required: true,
                },
            ]
        },
        step3: {
            selects: [
                {
                    id: "card",
                    label: "Карта",
                    options: ["МИР Премиальная", "МИР Премиальная", "МИР Премиальная"],
                    required: true,
                },
                {
                    id: "currency",
                    label: "Валюта",
                    options: ["Рубли", "Рубли", "Рубли"],
                    required: true,
