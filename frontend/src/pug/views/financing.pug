    +banner-text(
        bannerTextData,
        "orange",
        "bg-heavy-purple"
    )

    section.section-layout.bg-dark-10
        .container
            .row.row-gap-4.row-gap-md-5.row-gap-lg-7
                .card-offer-grid
                    each card in cardList
                        +card-product(card)

                .col-12
                    +card-service-app({
                        bgColor: 'purple',
                        title: "Интернет-банк для бизнеса",
                        benefits: [
                            {
                                icon: "icon-doc",
                                text: "Удаленный <br>документооборот"
                            },
                            {
                                icon: "icon-cash",
                                text: "Проведение <br>платежей"
                            },
                            {
                                icon: "icon-wallet",
                                text: "Управление <br>расчетными счетами"
                            }
                        ]
                    })
                        a(href="#").btn.btn-orange.d-none.d-md-inline-flex
                            | Перейти в интернет-банк
                        a(href="#").btn.btn-sm.btn-orange.d-md-none
                            | Перейти в интернет-банк

                .col-12
                    .row.cards-gutter
                        .col-12.col-md-6.col-lg-4
                            +card-product(productCards[0])
                        .col-12.col-md-6.col-lg-4
                            +card-product(productCards[1])
                        .col-12.col-lg-4
                            +card-product(productCards[2])
                        .col-12.col-md-6.col-xl-3
                            +card-product(productCards[3])
                        .col-12.col-md-6.col-xl-3
                            +card-product(productCards[4])
                        .col-12.col-md-6.col-xl-3
                            +card-product(productCards[5])
                        .col-12.col-md-6.col-xl-3
                            +card-product(productCards[6])
    section.section-layout.js-collapsed-mobile
        .container
            h3.d-none.d-md-block.mb-md-6.mb-lg-7.px-lg-6
                | Подробнее о&nbsp;услугах
            a(
                data-bs-toggle="collapse"
                href="#more-service"
                role="button"
                aria-expanded="false"
                aria-controls="more-service"
            ).h3.d-flex.align-items-center.justify-content-between.dark-100.d-md-none
                | Подробнее о&nbsp;услугах
                +svg-use("icon-chevron-down", "icon size-m violet-100")
            #more-service.collapse.d-md-block.mt-4.mt-md-6.mt-lg-7
                .row.px-lg-6
                    .col-12
                        +tabs-simple(tabsList, false)
                        .tab-content.mt-4.mt-md-6.mt-lg-7
                            #documents.tab-pane.fade.show.active(aria-labelledby="documents" tabindex="0" role="tabpanel")
                                include ../includes/layout/tabs/documents-corp-clients
                            #faq.tab-pane.fade(aria-labelledby="faq" tabindex="0" role="tabpanel")
                                include ../includes/layout/tabs/faq
        +pattern-bg('section-2', 'light', 'pattern-bg--hide-mobile')

    include ../includes/layout/section-announcement

    section.section-layout
        .container
            h3.px-lg-6.mb-4.mb-md-6.mb-lg-7
                | Другие услуги для корпоративных клиентов
            +slider-card-product(cardProductListCorp)
