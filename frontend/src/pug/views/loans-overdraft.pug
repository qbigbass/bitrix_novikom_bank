extends ../templates/base

block title
    title= 'Кредиты - Овердрафт'
    meta(name="description" content="Описание страницы с кредитами")
block content

    include ../includes/header/header
    include ../components/banners/text-banner
    include ../components/banners/banner-product-info
    include ../components/banners/info-product-banner
    include ../components/ui/tabs
    include ../components/ui/tabs-simple
    include ../components/tabs-with-content
    include ../components/benefit
    include ../includes/layout/slider-card-product

    -
        var additionalTabsList = [
            {
                linkText: "Условия для заемщика",
                link: "#1",
                id: "additional-info-1",
            },
            {
                linkText: "Необходимые документы",
                link: "#2",
                id: "additional-info-2",
            },
            {
                linkText: "Вопросы и ответы",
                link: "#3",
                id: "additional-info-3",
            }
        ]

    +text-banner(
        "Овердрафт",
        [
            {linkText: "Частным клиентам", link: "/"},
            {linkText: "Кредиты", link: "/"}
        ],
        "Кредит «до зарплаты» на случай непредвиденных расходов и неотложных платежей.",
        "green",
        "../img/big-illustrations/large-individual/overdraft.png"
    )

    section.section-restructuring-benefits.px-0.px-lg-6.py-6.py-sm-9.py-md-11.py-xl-16.position-relative.overflow-hidden
        -
            const allBenefits = [
                {
                    spriteData: {
                        name: 'icon-a-money-on',
                        classList: 'size-xl',
                    },
                    title: 'Погашается автоматически',
                    description: 'При поступлении денежных средств <br>на счет карты',
                },
                {
                    spriteData: {
                        name: 'icon-a-money',
                        classList: 'size-xl',
                    },
                    title: '15 000 рублей',
                    description: 'Максимальный размер кредитного лимита, <br>но не более 70% от ежемесячного оклада',
                },
                {
                    spriteData: {
                        name: 'icon-a-date',
                        classList: 'size-xl',
                    },
                    title: '1 год',
                    description: 'Срок предоставления лимита <br>с возможностью пролонгации',
                }
            ]

        .container
            .row.mb-6.mb-lg-7
                h3= "Преимущества для каждого"
            .row.row-gap-6
                each item, index in allBenefits
                    .col-12.col-md-6.col-lg-4
                        +benefit(item.spriteData, item.title, item.description)
        +pattern-bg('section', 'light', 'pattern-bg--position-sm-bottom section-restructuring-benefits__pattern')

    +banner-product-info({
        title: "Как получить кредит",
        tag: "Услуга",
        button: {
            href: "#",
            text: "Подробнее",
        },
        imageSrc: "img/banners/page-banner-2.png"
    })
        p.text-l.m-0 Обратиться в&nbsp;офис Банка с&nbsp;необходимым пакетом документов. Клиенты, получающие заработную плату на&nbsp;счет в&nbsp;банке Новиком, могут оформить заявку на&nbsp;территории своей организации.

    section.section-layout.js-collapsed-mobile
        .container
            h3.d-none.d-md-flex.mb-md-6.mb-lg-7.px-lg-6
                | Подробные условия
            a(
                data-bs-toggle="collapse"
                href="#additional-info-content"
                role="button"
                aria-expanded="false"
                aria-controls="additional-info-content"
            ).h3.d-flex.align-items-center.justify-content-between.dark-100.d-md-none
                | Подробные условия
                +svg-use("icon-chevron-down", "icon size-m violet-100")
            #additional-info-content.collapse.d-md-block.mt-4.mt-md-6.mt-lg-7
                .row.px-lg-6
                    .col-12
                        +tabs-simple(additionalTabsList, false)
                        .tab-content.mt-4.mt-md-6.mt-lg-7
                            #additional-info-1.tab-pane.fade.show.active(aria-labelledby="additional-info-1" tabindex="0" role="tabpanel")
                                include ../includes/layout/tabs/conditions-for-borrower
                            #additional-info-2.tab-pane.fade(aria-labelledby="additional-info-2" tabindex="0" role="tabpanel")
                                include ../includes/layout/tabs/necessary-documents
                            #additional-info-3.tab-pane.fade(aria-labelledby="additional-info-3" tabindex="0" role="tabpanel")
                                include ../includes/layout/tabs/faq

        +pattern-bg('section-2', 'light', 'pattern-bg--hide-mobile')

    section.section-layout
        .container
            h3.px-lg-6.mb-4.mb-md-6.mb-lg-7
                | Смотрите также
            +slider-card-product()
