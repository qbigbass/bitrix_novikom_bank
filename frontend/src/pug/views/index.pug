extends ../templates/base

block title
    title= 'Частные клиенты'
    meta(name="description" content="Описание главной страницы")
block content
    include ../includes/header/header
    include ../components/banner-hero
    include ../cards/card-service

    section.section-layout
        .container
            h3.px-lg-6.mb-6.mb-lg-7
                | Предложения банка Новиком
            include ../includes/layout/slider-card-product

    section.section-layout.bank-service-layout
        .container
            .bank-service-layout__wrapper
                .bank-service-layout__services
                    .swiper.js-slider-cards(data-slides-per-view="mobile-s:1,mobile:1,tablet:3,laptop:3,laptop-x:3" data-space-between="mobile-s:8,mobile:8,tablet:8,laptop:8,laptop-x:8")
                        .swiper-wrapper.js-swiper-wrapper
                            -
                                var cardServiceList = [
                                    {
                                        href: "#",
                                        title: "Интернет-банк",
                                        icon: "icon-a-web-bank"
                                    },
                                    {
                                        href: "#",
                                        title: "Кредиты",
                                        icon: "icon-a-money"
                                    },
                                    {
                                        href: "#",
                                        title: "Ипотека",
                                        icon: "icon-a-house"
                                    }
                                ]
                            each card in cardServiceList
                                .swiper-slide.js-swiper-slide
                                    +card-service(card)

                        .slider-controls.js-swiper-controls.mt-3.mt-md-4
                            div.slider-controls__pagination.js-swiper-pagination
                            div.slider-controls__navigation.js-swiper-nav
                                button.swiper-button-prev.js-swiper-prev(type="button")
                                    span.icon.size-m
                                        +svg-use("icon-chevron-left")

                                button.swiper-button-next.js-swiper-next(type="button")
                                    span.icon.size-m
                                        +svg-use("icon-chevron-right")

    include ../includes/layout/section-feedback
