extends ../templates/base

block title
    title= 'Частные клиенты'
    meta(name="description" content="Описание главной страницы")
block content
    include ../includes/header/header
    include ../components/banners/banner-hero
    include ../cards/card-service
    include ../cards/card-service-app
    include ../components/announcement
    include ../cards/card-special
    include ../components/ui/tabs
    include ../includes/layout/slider-card-product

    -
        var bannerHeroData = {
            bgClass: "",
            bgImageSrc: "img/slides/hero_banner_bg_desktop.png",
            sliders: [
                {
                    title: "Банк российских <br>инженеров",
                    text: "Мы&nbsp;укрепляем технологический суверенитет России и&nbsp;помогаем занять лидерские позиции в&nbsp;экономике будущего",
                    button: "Больше о банке",
                    thumbBorderColor: "green",
                },
                {
                    title: "Банку Новиком <br>30 лет",
                    text: "Мы&nbsp;укрепляем технологический суверенитет России и&nbsp;помогаем занять лидерские позиции в&nbsp;экономике будущего",
                    thumbBorderColor: "green",
                },
                {
                    title: "Ваша финансовая <br>безопасность",
                    text: "Мы&nbsp;укрепляем технологический суверенитет России и&nbsp;помогаем занять лидерские позиции в&nbsp;экономике будущего",
                    button: "Больше о банке",
                    thumbBorderColor: "green",
                },
                {
                    title: "Годовой <br>отчет",
                    text: "Мы&nbsp;укрепляем технологический суверенитет России и&nbsp;помогаем занять лидерские позиции в&nbsp;экономике будущего",
                    thumbBorderColor: "green",
                },
            ]
        }

    +banner-hero(bannerHeroData)

    section.section-layout
        .container
            h3.ps-lg-6.mb-6.mb-lg-7
                | Предложения банка Новиком
            +slider-card-product()

    section.section-layout.bank-service-layout
        .container
            .bank-service-layout__wrapper
                .bank-service-layout__services
                    .swiper.js-slider-cards(data-slides-per-view="mobile-s:1,mobile:1,tablet:3,laptop:3,laptop-x:3" data-space-between="mobile-s:8,mobile:8,tablet:8,laptop:8,laptop-x:8")
                        .swiper-wrapper.js-swiper-wrapper
                            -
                                var cardServiceList = [
                                    {
                                        href: "#",
                                        title: "Интернет-банк",
                                        icon: "icon-a-web-bank"
                                    },
                                    {
                                        href: "#",
                                        title: "Кредиты",
                                        icon: "icon-a-money"
                                    },
                                    {
                                        href: "#",
                                        title: "Ипотека",
                                        icon: "icon-a-house"
                                    }
                                ]
                            each card in cardServiceList
                                .swiper-slide.js-swiper-slide
                                    +card-service(card)

                        +slider-controls().mt-3.mt-md-0
                .bank-service-layout__salary
                    .card-service-salary
                        .card-service-salary__content
                            h3 Зарплатная карта
                            .d-flex.flex-wrap.column-gap-6.row-gap-4.column-gap-md-7
                                a.btn.btn-link.btn-lg-lg.text-info.btn-icon(href="#")
                                    | Кешбэк
                                    +svg-use("icon-arrow-right", "icon size-m")
                                a.btn.btn-link.btn-lg-lg.text-info.btn-icon(href="#")
                                    | Бонусы
                                    +svg-use("icon-arrow-right", "icon size-m")
                                a.btn.btn-link.btn-lg-lg.text-info.btn-icon(href="#")
                                    | Акции
                                    +svg-use("icon-arrow-right", "icon size-m")
                        +pattern-bg('card', 'dark')
                        +pattern-bg('card', 'dark', 'card-service-salary__desktop-pattern')
                .bank-service-layout__app
                    +card-service-app({
                        title: "Мобильное приложение",
                        benefits: [
                            {
                                icon: "icon-mobile",
                                text: "Управление кешбэком и&nbsp;бонусами"
                            },
                            {
                                icon: "icon-time",
                                text: "Доступ к&nbsp;услугам банка 24/7"
                            },
                            {
                                icon: "icon-cash",
                                text: "Платежи и&nbsp;переводы без комиссии"
                            }
                        ]
                    })
                        a(href="#").btn.btn-info.d-none.d-md-inline-flex.align-items-center
                            img(src="img/app-logos/ru-store.svg" width="94" height="24" alt="RuStore" loading="lazy")
                        a(href="#").btn.btn-info.d-none.d-md-inline-flex.align-items-center
                            img(src="img/app-logos/ru-market.svg" width="120" height="28" alt="RuMarket" loading="lazy")
                        a(href="#").btn.btn-info.d-none.d-md-inline-flex.align-items-center
                            img(src="img/app-logos/nash-store.svg" width="112" height="18" alt="NashStore" loading="lazy")
                        a(href="#").btn.btn-info.btn-icon.d-none.d-md-inline-flex
                            | Скачать
                            +svg-use("icon-download", "icon size-m")
                        a(href="#").btn.btn-sm.btn-info.btn-icon.d-md-none
                            | Скачать
                            +svg-use("icon-download-small", "icon size-s")

    include ../includes/layout/section-calculator

    section.section-layout
        .container
            .row
                .col-12.col-xxl-6.d-flex.flex-column.gap-6.gap-lg-7

                    a(href="#").h3.d-flex.align-items-center.ps-lg-6.pt-xxl-6
                        span Объявления
                            |
                            |
                            span.d-none.d-md-inline для клиентов
                        span.icon.size-m.violet-100.ms-auto.ms-md-3
                            +svg-use("icon-chevron-right")

                    div.ps-lg-6.mt-xxl-auto.mw-100
                        .swiper.js-announcement-slider
                            -
                                var announcementList = [
                                    {
                                        date: '25.04.2024',
                                        title: 'Технические работы 30 апреля 2024 года в период с 0:00 до 3:30 (МСК)',
                                        link: '#'
                                    },
                                    {
                                        date: '25.04.2024',
                                        title: 'Режим работы клиентских офисов в мае',
                                        link: '#'
                                    },
                                    {
                                        date: '25.04.2024',
                                        title: 'Технические работы 30 апреля 2024 года в период с 0:00 до 3:30 (МСК)',
                                        link: '#'
                                    },
                                    {
                                        date: '25.04.2024',
                                        title: 'Режим работы клиентских офисов в мае',
                                        link: '#'
                                    },
                                    {
                                        date: '25.04.2024',
                                        title: 'Технические работы 30 апреля 2024 года в период с 0:00 до 3:30 (МСК)',
                                        link: '#'
                                    },
                                    {
                                        date: '25.04.2024',
                                        title: 'Режим работы клиентских офисов в мае',
                                        link: '#'
                                    }
                                ]
                            .swiper-wrapper
                                each item in announcementList
                                    .swiper-slide.js-announcement-slide
                                        +announcement(item)

                            +slider-controls().mt-3.mt-md-4

                .col-12.col-xxl-6.mt-6.mt-xxl-0
                    a(href="#").card-link.h3.d-lg-none
                        | О банке
                        +svg-use("icon-chevron-right", "icon size-m blue-100")
                    .card-about-bank.d-none.d-lg-flex
                        .card-about-bank__col.d-flex.flex-column.gap-6
                            a(href="#").h3
                                | О банке
                                +svg-use("icon-chevron-right", "icon size-m blue-100")
                            .d-flex.flex-column
                                span.violet-100.fw-semibold.text-number-m.fw-bold 30 лет
                                p.card-about-bank__description.text-s.fw-semibold
                                    | успешной работы в&nbsp;реальном секторе российской
                                    br.d-xxl-none
                                    |
                                    | экономики
                            .d-flex.flex-column
                                span.violet-100.fw-semibold.text-number-m.fw-bold 19,4 млн
                                p.card-about-bank__description.text-s.fw-semibold
                                    | рекордная чистая прибыль
                                    br
                                    | за&nbsp;2022&nbsp;г

                        .card-about-bank__col.d-flex.flex-column
                            img(src="img/top.svg" alt="Топ" width="138" height="54" loading="lazy")
                            img(src="img/top-20.svg" alt="20" width="138" height="144" loading="lazy")

                            p.card-about-bank__description.text-s.fw-semibold.mt-auto
                                | по&nbsp;величине капитала, объему активов
                                br.d-xxl-none
                                |
                                | и&nbsp;корпоративных кредитов

                        +pattern-bg('card', 'light', 'card-about-bank__pattern')
    include ../includes/layout/section-news-cards
    include ../includes/layout/section-feedback
    include ../includes/layout/section-currency-exchange

