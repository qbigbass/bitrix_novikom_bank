    meta(name="description" content="Описание страницы с закупочной деятельностью")
block content
    -
        var bannerTextData = {
            title: "Закупочная деятельность",
            breadcrumbsArray: [
                {linkText: "О банке", link: "/"}
            ],
            description: "",
        }

        var cardProductList = [
            {
                title: 'Документы',
                img: 'large-individual/individual-documents.png',
