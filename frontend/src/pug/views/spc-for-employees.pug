    +banner-product-info({
        title: "Льготные процентные ставки по&nbsp;потребительским кредитам и&nbsp;ипотеке",
        tag: "Услуга",
        button: {
            href: "#",
            text: "Подробнее",
        },
        imageSrc: "img/banners/page-banner-1.png"
    })
