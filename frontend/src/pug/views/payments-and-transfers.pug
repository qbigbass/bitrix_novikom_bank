extends ../templates/base

block title
    title= 'Частные клиенты - Платежи и переводы'
    meta(name="description" content="Описание страницы с вкладами")
block content
    -
        var bannerTextData = {
            title: "Платежи и переводы",
            breadcrumbsArray: [
                {linkText: "Частным клиентам", link: "/"}
            ],
            description: "Переводите деньги любым удобным для вас способом: на&nbsp;сайте, в&nbsp;банкоматах, в&nbsp;интернет-банке и&nbsp;мобильном приложении."
        }

    include ../cards/card-product
    include ../includes/header/header
    include ../components/banners/banner-text
    include ../components/banners/banner-product-info
    include ../includes/layout/slider-card-product

    +banner-text(
        bannerTextData,
        "green"
    )

    section.section-layout.bg-dark-10
        -
            var cardList = [
                {
                    color: 'transparent',
                    title: 'Моментальный онлайн-перевод',
                    description: 'Переводы с&nbsp;карты на&nbsp;карту по&nbsp;России, а&nbsp;также в&nbsp;Абхазию, Армению, Беларусь, Казахстан, Таджикистан и&nbsp;Южную Осетию.',
                    img: 'large-individual/instant-online-translation.png',
                    link: 'Перевести онлайн',
                },
                {
                    color: 'transparent',
                    title: 'Переводы в&nbsp;интернет-банке или приложении',
                    description: 'Удобные и&nbsp;быстрые переводы через онлайн сервисы',
                    img: 'large-individual/transfers-in-internet-banking.png',
                    link: 'Подробнее',
                },
                {
                    color: 'transparent',
                    title: 'Операции через банкомат',
                    description: 'Переводы, пополнение и&nbsp;снятие наличных в&nbsp;банкоматах Новиком и&nbsp;сторонних банков',
                    img: 'large-individual/ATM-transactions.png',
                    link: 'Подробнее',
                },
                {
                    color: 'transparent',
                    title: 'Банковские переводы в&nbsp;офисе',
                    description: 'Переводы денежных средств в&nbsp;рублях и&nbsp;иностранной валюте в&nbsp;пользу физических и&nbsp;юридических лиц в&nbsp;любую точку мира',
                    img: 'large-individual/transfers-in-office.png',
                    link: 'Подробнее',
                },
            ]
        .container
            .row.cards-gutter
                each card, idx in cardList
                    .col-12.col-md-6
                        +card-product(card).card-product--bg-white

    +banner-product-info({
        title: "Защита от&nbsp;мошенничества",
        tag: "Услуга",
        imageSrc: "img/banners/page-banner-5.png",
        button: {
            href: "#",
            text: "Подробнее",
        },
    })
        p.text-l Мы&nbsp;придаём большое значение обеспечению безопасности доступа к&nbsp;денежным средствам Клиентов и&nbsp;подготовили для вас памятку.
        p.text-l.mb-0 Узнайте как уберечь себе и&nbsp;своих близких от&nbsp;финансового мошенничества.


    section.section-layout
        .container
            h3.px-lg-6.mb-4.mb-md-6.mb-lg-7
                | Смотрите также
            +slider-card-product()
