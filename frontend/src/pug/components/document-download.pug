mixin document-download(data)
    a.d-flex.flex-column.gap-2.py-3.document-download(class=data.classSize ? data.classSize : 'text-l', href= data.href, download="")!= data.text
        if data.preamble
            p.text-s.dark-70.mb-0!= data.preamble
        .d-flex.flex-column.flex-sm-row.gap-2
            .d-flex.gap-1.align-items-center
                .document-download__file.caption-m.dark-70
                    span.document-download__date-time= data.dateTime
                    span.document-download__file-type= data.fileType
                span.icon.size-s.text-primary
                    +svg-use("icon-download-small")
            if data.activeDate
                span.caption-m.dark-70.ms-sm-auto.flex-shrink-0!= data.activeDate
