doctype html
html(lang="ru")
    head
        block title
            title= ''
            meta(name="description" content="Описание страницы")
        include ../includes/head
        block style

    body
        include ../mixins/svg-use
        include ../mixins/pattern-bg
        include ../mixins/slider-controls
        include ../mixins/polygon-container

        .page-wrapper.js-page-wrapper
            block content

            include ../includes/footer/footer

        include ../includes/mobile-nav/mobile-main-nav
        block script
        script(src="js/jquery.min.js")
        script(src="js/popover.js")
        script(src="js/bootstrap.min.js")
        script(src="js/swiper.min.js")
        script(src="js/select2.min.js")
        script(src="js/airdatepicker.js")
        script(src="js/bundle.js")
