mixin card-help(data)
    .card-help.d-inline-flex.p-3.p-sm-5.p-lg-6.bg-blue-10.w-100
        div.card-help__inner.d-flex.flex-column.gap-4.gap-md-6.h-100.w-100
            div.card-help__title-group.d-flex.flex-column.gap-3.gap-md-4
                if data.title
                    h4.card-help__title!= data.title
                if data.description
                    p.card-help__description.text-m.m-0!= data.description
            form.form-feedback.p-0.gap-3.gap-md-4(action="/", method="POST")
                div
                    label.form-label(for="mobile-phone-help") Мобильный телефон
                    input#mobile-phone-help.card-help__input.form-control.form-control-lg.bg-transparent(type="text", aria-describedby="mobile-phone-hint", placeholder="+7")
                button.btn.btn-primary.btn-lg.text-m.w-100(type="button")
                    | Перезвоните мне
            if data.chatButtonIsVisible
                button.card-help__button.btn.btn-link.btn-lg.btn-icon.mx-auto.gap-2(type="button")
                    +svg-use("icon-chat", "icon size-m")
                    | Написать в чат
            if data.agreementText
                p.card-help__agreement-text.m-0.dark-70.fs-4.lh-sm!=data.agreementText