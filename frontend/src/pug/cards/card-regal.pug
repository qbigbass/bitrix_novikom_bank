mixin card-regal(data)
    .card-regal.d-flex.flex-column.flex-md-row.row-gap-3.column-gap-md-6.bg-dark-30
        img.card-regal__image(src= data.image width="200" height="200" alt="" loading="lazy")
        .card-regal__content.d-flex.flex-column.row-gap-4
            .d-flex.justify-content-between.align-items-end.violet-100
                h4!= data.title
                if data.date
                    span.text-number-l.fw-bold= data.date
            block
