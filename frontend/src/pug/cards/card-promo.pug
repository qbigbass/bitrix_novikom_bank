include ../components/benefit-text

mixin card-promo(data)
    .card-promo&attributes(attributes)
        .card-promo__wrapper
            .card-promo__header.d-flex.flex-column.row-gap-3.row-gap-md-4
                h2!= data.title
                if data.text
                    p.text-l.mb-0(class=data.textClass ? data.textClass : '' )!= data.text
            if data.image
                img.card-promo__image(src=`img/${data.image}`, alt="", loading="lazy")
            if data.benefits
                .card-promo__body
                    each benefit in data.benefits
                        +benefit-text(benefit, benefit.colorClass)
            if block
                .d-flex.flex-column.flex-md-row.align-items-md-center.gap-3.gap-md-6
                    block
        +pattern-bg('section-2', 'dark')
