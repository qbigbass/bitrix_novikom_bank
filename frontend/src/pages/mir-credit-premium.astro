const benefitCards = [
	{
		title: 'От 15 000 рублей',
		description: 'Минимальный размер кредита',
		iconId: 'icon-a-money-down'
	},
	{
		title: 'До 3 ежемесячных окладов  ',
		description: 'Максимальный размер кредита',
		iconId: 'icon-a-money'
	},
	{
		title: '12 месяцев',
		description: 'Срок действия кредитного лимита<br>с последующей пролонгацией',
		iconId: 'icon-a-date'
	},
	{
		title: 'До 56 дней',
		description: 'Беспроцентный период',
		iconId: 'icon-a-date'
	},
	{
		title: '0 <span class="currency">₽</span>',
		description: 'Стоимость обслуживания',
		iconId: 'icon-a-free-service'
	},
	{
		title: 'Надежность',
		description: 'Работает на территории России независимо <br>от внешних экономических и политических факторов',
		iconId: 'icon-a-stability'
	}
