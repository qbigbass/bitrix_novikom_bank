---
import AIcon from "../../AIcon.astro";

interface Props {
	href?: string;
	text: string;
	icon: string
}

const {
	href = '#',
	text,
	icon
} = Astro.props as Props;
---

<a class="discount-link headline-4" href={href}>
	<div class="discount-link__icon">
		<img src={icon} />
	</div>
	<span class="discount-link__text" set:html={text}></span>
</a>

<style lang="scss" is:global>
	@import "@styles/media-queries";

	.discount-link {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		color: var(--violet-100);
		text-decoration: none;
		height: 100%;

		&__icon {
			display: flex;
			justify-content: center;
			align-items: center;
			width: 5rem;
			height: 5rem;

			img {
				width: 100%;
				height: 100%;
				object-fit: contain;
			}

			@include use-media(tablet) {
				width: 7.5rem;
				height: 7.5rem;
			}
		}

		@include use-media(tablet-album) {
			gap: 1.5rem;
		}
	}
</style>