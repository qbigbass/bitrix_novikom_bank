---
/**
	layout основного меню - разделы сайта, лого, переход в онлайн-банк
	*/
import DesktopMainMenu from "@components/common/DesktopMainMenu/DesktopMainMenu.astro";

// TODO: имена директорий со строчной, кебаб-кейс
---

<Fragment>

	<DesktopMainMenu class="desktop-main-nav__menu"/>

</Fragment>

<style lang="scss" is:global>
	@import "@styles/media-queries";

	.desktop-main-nav {
		$root: #{&};
		$breakpoint: tablet;

		display: grid;
		grid-template-columns: repeat(2, 1fr);
		grid-template-rows: auto;
		grid-template-areas: "logo bank";
		gap: 1rem;

		@include use-media($breakpoint) {
			grid-template-columns: auto 50% auto;
			grid-template-rows: auto;
			grid-template-areas: "logo menu bank";
			gap: 2.5rem;
			place-content: space-between;
		}

		&__logo {
			grid-area: logo;
		}

		&__bank {
			grid-area: bank;
		}

		&__menu.desktop-main-menu {
			display: none;

			@include use-media($breakpoint) {
				display: grid;
				grid-area: menu;
				margin: auto;
			}
		}
	}
</style>
