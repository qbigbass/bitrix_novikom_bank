---
import AButton from "../../ui/Buttons/AButton.astro";
type BackgroundColors = "gray" | "blue";


interface Props {
    title: string;
    class?: string;
    description?: string;
    textLink?: string;
    imgSrc: string;
    backgroundColor?: BackgroundColors;
    size?: string;
}

const {
    class: className,
    title,
    description,
    textLink,
    imgSrc,
    backgroundColor,
    size,
} = Astro.props as Props;
---

<div
    class:list={[
        "illustration-card",
        `${backgroundColor ? `illustration-card--bg-${backgroundColor}` : ""}`,
        `${size ? `illustration-card--size-${size}` : ""}`,
        className,
    ]}
>
    <img class="illustration-card__img" src={imgSrc} alt="" loading="lazy" />
    <div class="illustration-card__content">
        <h3 class="illustration-card__title headline-4" set:html={title} />
        <div class="illustration-card__content-wrapper">
            {
                description && (
                    <p
                        class="illustration-card__description body-m-light"
                        set:html={description}
                    />
                )
            }
            <slot />
        </div>
    </div>
    {
        textLink && (
            <AButton
                class="illustration-card__link"
                element="a"
                size="m"
                afterIcon="icon-chevron-right"
                text
            >
                {textLink}
            </AButton>
        )
    }
</div>

<style lang="scss" is:global>
    @import "@styles/media-queries";

    .illustration-card {
        $root: #{&};

        --img-size: 11.25rem;

        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 1rem;
        border-radius: 0.75rem;
        background-color: var(--dark-0);
        height: 100%;
        overflow: hidden;

        @include use-media(tablet) {
            padding: 2rem;
            gap: 3rem;
        }

        @include use-media(tablet-album) {
            --img-size: 17.5rem;
            padding: 2.5rem;
        }

        &__img {
            align-self: center;
            max-height: var(--img-size);
            max-width: var(--img-size);
            width: 100%;
            height: auto;

            @include use-media(tablet) {
                position: absolute;
                right: -1.5rem;
                bottom: -1.5rem;
            }
        }

        &__content {
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            flex: 1;
            z-index: 2;
        }

        &__title {
            br {
                display: none;

                @include use-media(laptop) {
                    display: block;
                }
            }
        }

        &__description {
            @include use-media(tablet) {
                max-width: calc(100% - var(--img-size) + 1.5rem * 2);
            }
        }

        &__link {
            align-self: flex-start;
        }

        &--bg-gray {
            background-color: var(--dark-30);
        }

        &--bg-blue {
            background-color: var(--blue-10);
        }

        &--size-xl {
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
            gap: 1rem;

            @include use-media(tablet) {
                gap: 1.5rem;
                padding: 2rem;
            }

            @include use-media(tablet-album) {
                padding: 2.5rem;
            }

            @include use-media(laptop) {
                min-height: 20rem;
            }

            #{$root}__content {
                @include use-media(tablet-album) {
                    gap: 2.5rem;
                }
            }

            #{$root}__img {
                @include use-media(tablet) {
                    position: relative;
                    right: auto;
                    bottom: auto;
                }

                @include use-media(tablet-album) {
                    position: absolute;
                    right: -1.5rem;
                    bottom: -1.5rem;
                }
            }

            #{$root}__content-wrapper {
                @include use-media(tablet-album) {
                    max-width: 50%;
                }

                @include use-media(laptop) {
                    max-width: 70%;
                }
            }
        }
    }
</style>
