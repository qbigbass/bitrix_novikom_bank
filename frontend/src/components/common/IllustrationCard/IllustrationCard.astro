---
import AButton from "../../ui/Buttons/AButton.astro";
interface Props {
    title: string;
    description: string;
    textLink: string;
    imgSrc: string;
}

const {
    title,
    description,
    textLink,
    imgSrc
} = Astro.props as Props;
---

<div class="illustration-card">
    <img class="illustration-card__img" src={imgSrc} />
    <div class="illustration-card__content">
        <h4 class="illustration-card__title headline-4" set:html={title}></h4>
        <p class="illustration-card__description body-m-light" set:html={description}></p>
    </div>
    <AButton
        class="illustration-card__link"
        element="a"
        size="m"
        afterIcon="icon-chevron-right"
        text
    >
        {textLink}
    </AButton>
</div>

<style lang="scss" is:global>
    @import "@styles/media-queries";

    .illustration-card {
        --img-size: 11.25rem;

        position: relative;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 1rem;
        border-radius: 0.75rem;
        background-color: var(--dark-0);
        height: 100%;
        overflow: hidden;

        &__img {
            align-self: center;
            max-height: var(--img-size);
            max-width: var(--img-size);
            width: 100%;
            height: auto;

            @include use-media(tablet) {
                position: absolute;
                right: -1.5rem;
                bottom: -1.5rem;
            }
        }

        &__content {
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            flex: 1;
            z-index: 2;
        }

        &__title {
            br {
                display: none;

                @include use-media(laptop) {
                    display: block;
                }
            }
        }

        &__description {
            @include use-media(tablet) {
                max-width: calc(100% - var(--img-size) + 1.5rem * 2);
            }
        }

        &__link {
            align-self: flex-start;
        }

        @include use-media(tablet) {
            padding: 2rem;
            gap: 3rem;
        }

        @include use-media(tablet-album) {
            --img-size: 17.5rem;
            padding: 2.5rem;
        }
    }
</style>
