---

import SectionLayout from "./SectionLayout.astro";---

<SectionLayout class="card-with-button-layout">
	<div class="content-container">
		<div class="card-with-button-layout__container">
			<slot />
		</div>
	</div>
	<div class="card-with-button-layout__bg">
		<img src="assets/restructing-variants-bg.svg">
	</div>
</SectionLayout>

<style lang="scss" is:global>
	@import "@styles/media-queries";

	.card-with-button-layout {
		position: relative;
		background-color: var(--dark-10);

		&__container {
			position: relative;
			z-index: 1;
		}

		&__bg {
			position: absolute;
			bottom: 0;
			right: 0;
			width: 100%;
			height: 100%;
			z-index: 0;
			overflow: hidden;

			img {
				position: absolute;
				right: 0;
				bottom: 0;
			}
		}
	}
</style>