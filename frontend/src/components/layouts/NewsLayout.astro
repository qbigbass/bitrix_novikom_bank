---
interface Props {
    title: string;
}

const { title } = Astro.props as Props;

// layout для Новости
---
<div class="news-layout">
    <div class="news-layout__header">
        <h1 class="headline-1" set:html={title}></h1>
        <div class="news-layout__info">
            <slot name="info" />
        </div>
    </div>
    
    <div class="news-layout__body">
        <slot name="body" />
    </div>
</div>

<style lang="scss" is:global>
    @import "@styles/media-queries";

    .news-layout {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;

        &:not(:first-child) {
            margin-top: 2.5rem;
        }

        &__header {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        &__info {
            display: flex;
            gap: 1rem;
            align-items: center;

            & .a-tag {
                margin-bottom: 0;
            }
        }

        &__body {
            display: flex;
            flex-direction: column;
            gap: 2.5rem;
        }
    }
</style>