---
/**
	Компонент вывода больших иллюстраций из svg спрайта
*/

interface Props {
	class?: string;
	symbolId: string;
}

const { class: className, symbolId, ...rest } = Astro.props as Props;
---
<span
	class:list={[
		"a-big-illustrations",
		className
	]}
	{...rest}
>
	{
		symbolId && (
			<svg>
				<use xlink:href={`assets/big-illustrations.svg#${symbolId}`} />
			</svg>
		)
	}
</span>

<style lang="scss" is:global>
	@import "@styles/media-queries";

	.a-big-illustrations {
		display: inline-block;

		svg {
			width: 100%;
			height: 100%;
			vertical-align: top;
			object-fit: contain;
			object-position: 50% 50%;
			color: inherit;
			fill: currentColor;
		}
	}
</style>
