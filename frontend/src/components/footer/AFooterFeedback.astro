---
import AButton from "@components/ui/Buttons/AButton.astro";
interface Props {
	class: string;
}

const { class: className } = Astro.props as Props;
---

<div class="a-footer-feedback" class:list={[className]}>
	<a href="tel:88002527007" class="a-footer-feedback__number headline-3">+7 (800) 250-70-07</a>
	<a href="tel:84959747187" class="a-footer-feedback__number headline-3">+7 (495) 974-71-87</a>
	<div class="a-footer-feedback__address body-m-light">119180 Москва,<br>ул.&nbsp;Полянка Большая д.&nbsp;50/1 стр.&nbsp;1</div>
	<AButton element="a" href="#" size="m" outline beforeIcon="icon-point" text>Офисы и банкоматы</AButton>
	<AButton element="a" href="#" size="m" outline beforeIcon="icon-circle-telegram" text>Мы в Telegram</AButton>
	<AButton href="#" size="lm" full>Обратная связь</AButton>
	<div class="a-footer-feedback__help">
		<AButton
			size="lm"
			outline
			beforeIcon="icon-glasses"
			full
			class="a-footer-feedback__visually"
		>
			<span class="a-footer-feedback__visually-desktop">Версия для слабовидящих</span>
			<span class="a-footer-feedback__visually-mobile">Для слабовидящих</span>
		</AButton>
		<AButton
			size="lm"
			outline
			full
		>
			English version
		</AButton>
	</div>
</div>

<style lang="scss" is:global>
	@import "@styles/placeholders";
	@import '@styles/media-queries';

	.a-footer-feedback {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 1rem;

		&__number {
			@extend %reset-link;
		}

		&__address {
			color: var(--dark-70);
		}

		&__help {
			display: flex;
			flex-direction: column;
			gap: 1rem;
			width: 100%;

			@include use-media(tablet) {
				margin-top: 1rem;
			}

			@include use-media(tablet-album) {
				margin-top: 2rem;
			}
		}

		&__visually.a-button.a-button--lm {
			padding: 0.438rem 1.438rem;

			@include use-media(tablet-album) {
				padding: 0.938rem 0.938rem;
			}
		}

		&__visually-desktop {
			display: none;

			@include use-media(tablet) {
				display: inline;
			}
		}

		&__visually-mobile {
			@include use-media(tablet) {
				display: none;
			}
		}
	}
</style>