interface Props {
	offerCards?: [];
	spaceBetween?: string,
	slidesPerView?: string,
}

const {
	offerCards = defaultOfferCards,
	spaceBetween,
	slidesPerView,
} = Astro.props as Props;
---

<SectionLayout>
	<div class="content-container">
		<SectionTitle titleClass="headline-2" usePadding>Подключите выгоду</SectionTitle>
		<PersistentSlider
			spaceBetween={spaceBetween}
			slidesPerView={slidesPerView}
		>
			{
				offerCards.map((card) =>(
					<SliderSlide>
						<OfferCard
							symbolId={card.symbolId}
							color="green"
							textButton={card.buttonText}
							title={card.title}
							description={card.description}
							textIndicating={
								{
									text: card.numberText,
									beforeText: card.beforeNumberText,
									afterText: card.afterNumberText
								}
							}
						/>
					</SliderSlide>
				))
			}
		</PersistentSlider>
	</div>
</SectionLayout>