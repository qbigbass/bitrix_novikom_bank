---
import AIcon from "../../AIcon.astro";
interface Props {
    className?: string;
    placeholder?: string;
    name?: string;
    value?: string;
    beforeIcon?: string,
    afterIcon?: string,
}

const {
    className,
    placeholder,
    name,
    value,
    beforeIcon,
    afterIcon,
    ...rest
} = Astro.props;
---
<div class="input-wrapper" class:list={[ className ]} {...rest}>
    {beforeIcon && (
            <AIcon symbolId={beforeIcon} class="input-wrapper__icon" />
    )}
    <input placeholder={placeholder}
           name={name}
           value={value}
           class="input-wrapper__input" />
    {afterIcon && (
            <AIcon symbolId={afterIcon} class="input-wrapper__icon" />
    )}
</div>

<style lang="scss" is:global>
  @use "sass:map";
  @import "@styles/variables.scss";
  @import "@styles/media-queries";
  @import "@styles/placeholders.scss";

  .input-wrapper {
    display: flex;
    align-items: center;
    gap: .5rem;
    width: 100%;
    font-size: .875rem;
    line-height: 1.3;

    border: 1px solid var(--purple-30);
    border-radius: .25rem;
    padding: .625rem 1rem;
    transition: border-color ease .33s;

    @include use-media(tablet-album) {
      padding-top: 1.125rem;
      padding-bottom: 1.125rem;
      gap: 1rem;
      font-size: 1rem;
    }

    &:focus-within {
      border-color: var(--purple-70);

      & .input-wrapper__icon {
        color: var(--violet-100)
      }
    }

    &:hover {
      border-color: var(--purple-70);
    }

    &__input {
      @extend %reset-input;
      flex-grow: 1;
      border: none;

      &::placeholder {
        color: var(--dark-70);
      }

      &:focus {
        outline: none;
      }
    }

    &__icon {
      width: 1rem;
      height: 1rem;
      color: var(--dark-70);

      @include use-media(tablet-album) {
        width: 1.5rem;
        height: 1.5rem;
      }
    }
  }
</style>
