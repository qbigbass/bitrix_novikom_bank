---
interface Props {
    class?: string;
}

const { class: className, ...rest } = Astro.props as Props;
---

<div class="a-rte" class:list={className} {...rest}>
    <slot />
</div>

<style lang="scss" is:global>
    @import "@styles/typography";
    @import "@styles/media-queries";

    .a-rte {
        h2 {
            @extend .headline-2;

            &:not(:first-child) {
                margin-top: 2.5rem;

                @include use-media(tablet-album) {
                    margin-top: 3rem;
                }
            }

            &:not(:last-child) {
                margin-bottom: 1.5rem;
            }
        }

        h3 {
            @extend .headline-3;

            &:not(:last-child) {
                margin-bottom: 1.5rem;
            }
        }

        p {
            margin-bottom: 1.5rem;

            &:last-child {
                margin-bottom: 0;
            }

            & strong {
                @extend .body-l-heavy;
            }
        }

        ul {
            margin: 1.5rem 0;
            padding: 0;
            padding-inline-start: 1.75rem;
            list-style: none;
            font-weight: 600;

            @include use-media(tablet-album) {
                margin-bottom: 3rem;
            }

            li {
                position: relative;
                margin-bottom: 1rem;

                @include use-media(tablet-album) {
                    margin-bottom: 1.5rem;
                }

                &:last-child {
                    margin-bottom: 0;
                }

                &:before {
                    position: absolute;
                    content: url("../assets/ul-li-icon.svg");
                    left: -1.75rem;
                    top: 0;
                    width: 0.75rem;
                    height: 1.125rem;
                }

                & ul {
                    padding-top: 1.5rem;
                    font-weight: 400;
                    padding-inline-start: 1rem;

                    & li {
                        &:before {
                            content: "";
                            width: 0.25rem;
                            height: 0.25rem;
                            border-radius: 50%;
                            background-color: currentColor;
                            left: -1rem;
                            top: 0.75rem;
                        }
                    }
                }
            }

            &:first-child {
                margin-top: 0;
            }

            &:last-child {
                margin-bottom: 0;
            }
        }

        a {
            font-size: inherit;
            font-weight: inherit;
            line-height: inherit;
            text-decoration: none;
            color: var(--blue-100);

            &:hover {
                color: var(--violet-100);
            }
        }

        img {
            margin-left: -1.5rem;
            margin-right: -1.5rem;
            width: calc(100% + 3rem);

            @include use-media(tablet) {
                margin-left: 0;
                margin-right: 0;
                width: 100%;
                border-radius: 0.5rem;
            }

            &:not(:last-child) {
                margin-bottom: 2.5rem;

                @include use-media(tablet-album) {
                    margin-bottom: 3rem;
                }
            }
        }

		sup {
			font-size: 0.625em;
		}

        .a-table {
            &:not(:first-child) {
                margin-top: 1.5rem;
            }

            &:not(:last-child) {
                margin-bottom: 2.5rem;

                @include use-media(tablet-album) {
                    margin-bottom: 3rem;
                }
            }
        }

        & > *:not(.a-table) {
            @include use-media(tablet-album) {
                max-width: 63.375rem; //1014px
            }
        }
    }
</style>
