---
import ASliderInput from "../ui/ASliderInput/ASliderInput.astro";
import CalculatorLayout from "../layouts/CalculatorLayout.astro";
import CalculatorResult from "../common/CalculatorResult/CalculatorResult.astro";
import ASelectInput from "../ui/ASelectInput/ASelectInput.astro";
import FormRow from "../layouts/FormLayout/FormRow.astro";
import ADropDownButton from "../ui/ADropDown/ADropDownButton/ADropDownButton.astro";
---

<CalculatorLayout class="bonus-calculator">
    <Fragment slot="form">
        <ASliderInput
                id="amount-credit"
                label="Ваши покупки по карте в месяц"
                maxValue={5000000}
                minValue={20000}
                startValue={3534321}
                stepSize={5000}
                editable
                type="price"
        />
        <FormRow cols={2}>
            <ASelectInput size="m" label="Тип карты" placeholder="Выберите" name="cardType">
                <ADropDownButton
                    selected
                    class="body-m-light"
                    value="Дебетовая"
                >
                    Дебетовая
                </ADropDownButton>
                <ADropDownButton class="body-m-light" value="Кредитная">
                    Кредитная
                </ADropDownButton>
                <ADropDownButton
                    class="body-m-light"
                    value="Кредитная 2"
                >
                    Кредитная 2
                </ADropDownButton>
            </ASelectInput>
            <ASelectInput size="m" label="Категория основной карты" placeholder="Выберите" name="cardCategory">
                <ADropDownButton class="body-m-light" value="Premium">Premium</ADropDownButton>
                <ADropDownButton
                    selected
                    class="body-m-light"
                    value="Standard"
                >
                    Standard
                </ADropDownButton>
                <ADropDownButton class="body-m-light" value="Premium 2">Premium 2</ADropDownButton>
            </ASelectInput>
        </FormRow>
    </Fragment>
    <Fragment slot="card">
        <CalculatorResult
            label="За год получено"
            value="600 бонусов"
            polygonColor="green-100"
        />
    </Fragment>
</CalculatorLayout>

<style lang="scss" is:global>
    @import "@styles/media-queries";

    .bonus-calculator {
        & .calculator-layout {
            &__form {
                @include use-media(tablet-album) {
                    padding-left: 0;
                }
            }
        }

        & .a-slider-input-text-steps {
            display: none;
        }
    }
</style>
