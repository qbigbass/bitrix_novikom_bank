---
import ASliderInput from "../ui/ASliderInput/ASliderInput.astro";
import CalculatorLayout from "../layouts/CalculatorLayout.astro";
import CalculatorResult from "../common/CalculatorResult/CalculatorResult.astro";
import ASelectInput from "../ui/ASelectInput/ASelectInput.astro";
import FormRow from "../layouts/FormLayout/FormRow.astro";
import ADropDownItem from "../ui/ADropDown/ADropDownItem/ADropDownItem.astro";
---

<CalculatorLayout class="bonus-calculator">
    <Fragment slot="form">
        <ASliderInput
                id="amount-credit"
                label="Ваши покупки по карте в месяц"
                maxValue={5000000}
                minValue={20000}
                startValue={3534321}
                stepSize={5000}
                editable
                type="price"
        />
        <FormRow cols={2}>
            <ASelectInput size="m" label="Тип карты" placeholder="Выберите" name="cardType">
                <ADropDownItem selected value="Дебетовая"><span class="body-m-light">Дебетовая</span></ADropDownItem>
                <ADropDownItem value="Кредитная"><span class="body-m-light">Кредитная</span></ADropDownItem>
                <ADropDownItem value="Кредитная 2"><span class="body-m-light">Кредитная 2</span></ADropDownItem>
            </ASelectInput>

            <ASelectInput size="m" label="Категория основной карты" placeholder="Выберите" name="cardCategory">
                <ADropDownItem  value="Premium"><span class="body-m-light">Premium</span></ADropDownItem>
                <ADropDownItem selected value="Standard"><span class="body-m-light">Standard</span></ADropDownItem>
                <ADropDownItem value="Premium 2"><span class="body-m-light">Premium 2</span></ADropDownItem>
            </ASelectInput>
        </FormRow>
    </Fragment>
    <Fragment slot="card">
        <CalculatorResult
            label="За год получено"
            value="600 бонусов"
            polygonColor="green-100"
        />
    </Fragment>
</CalculatorLayout>

<style lang="scss" is:global>
    @import "@styles/media-queries";

    .bonus-calculator {

        & .calculator-layout {
            &__form {

                @include use-media(tablet-album) {
                    padding-left: 0;
                }
            }
        }

        & .a-slider-input-text-steps {
            display: none;
        }
    }
</style>
